<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemFinCuestionario"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@drawable/borde_redondeado">

    <TextView
        android:id="@+id/textoFin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Has finalizado este cuestionario."
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnEnviarRespuestas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar respuestas"
        android:backgroundTint="@color/morado_oscuro"
        android:textColor="@android:color/white"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:elevation="4dp" />
</LinearLayout>

